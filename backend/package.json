  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "cross-env NODE_ENV=development ts-node-dev src/index.ts",
    "build": "tsc && npm run copy-templates",
    "copy-templates": "node -e \"const fs = require('fs'); const path = require('path'); const src = path.join(__dirname, 'src', 'template'); const dest = path.join(__dirname, 'dist', 'template'); if (fs.existsSync(src)) { fs.cpSync(src, dest, { recursive: true }); console.log('Templates copied successfully'); } else { console.warn('Template source directory not found'); }\"",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "prisma:generate": "prisma generate",
    "prisma:dev": "cross-env NODE_ENV=development prisma migrate dev",
    "prisma:deploy": "cross-env NODE_ENV=production prisma migrate deploy",
    "prisma:studio:dev": "cross-env NODE_ENV=development prisma studio",
    "prisma:studio:prod": "cross-env NODE_ENV=production prisma studio"
  },
